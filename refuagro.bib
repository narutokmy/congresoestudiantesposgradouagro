	author = {Mascalchi, Mario and Vella, Alessandra},
	month = feb,
	year = {2020},
	pmid = {32033120},
	pmcid = {PMC7037189},
	pages = {1020},
	file = {PubMed Central Full Text PDF:/home/kamilo/Zotero/storage/5CNVZ4JB/Mascalchi y Vella - 2020 - Neuroimaging Biomarkers in SCA2 Gene Carriers.pdf:application/pdf},
